version: '2.1'
networks:
  iopex_network:
    external: true
services:
  opexwiseui:
    image: balasubramaniyand/test:latest
    restart: on-failure:5
    networks:
      - iopex_network
    hostname: opexwiseui
    ports:
      - "80:80"  # Expose port 80 on the host to port 80 on the container
    healthcheck:
      test: pgrep -f nginx || exit 1
      interval: 10m
      timeout: 10s
      retries: 3
