pipeline {
    agent any

    stages {
        stage('Scm check out') {
            steps {
                git credentialsId: 'gitlab', url: 'https://pexgit.growipx.com/supportfirst/supportfirst-frontend.git', branch: 'main'
            }
        }
    
        stage ('npm install'){
            steps {
                dir('/var/lib/jenkins/workspace/SupportfirstUI/') {
                    sh 'npm install -f'
                }
            }
        }

        stage('ng build --prod') {
            steps {
                dir('/var/lib/jenkins/workspace/SupportfirstUI/') {
                    sh 'ng build --prod'
                }
            }
        }

        stage('Move to /var/www/html') {
            steps {
                sh 'mv /var/lib/jenkins/workspace/SupportfirstUI/dist/* /var/www/html'
            }
        }
    }
}
